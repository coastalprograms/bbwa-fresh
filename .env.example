# Bayside Builders WA - Environment Configuration Template
# Copy this file to .env.local in the project root and fill in your actual values
# NEVER commit .env.local or any file containing real credentials to version control

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Your Supabase project URL (find in your Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Public/Anonymous key for client-side operations (safe to expose to browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Alternative to anon key - use publishable key if available (preferred)
# If both are set, the publishable key will be used
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your_supabase_publishable_key

# Server-only service role key for admin operations (NEVER expose to client)
# Used for bypassing RLS in server actions and API routes
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================
# Set AI_PROVIDER to either 'gemini' or 'openai' (defaults to 'gemini' if unset)
AI_PROVIDER=gemini

# Google Gemini API key (for AI-assisted content generation)
GEMINI_API_KEY=your_gemini_api_key

# OpenAI API key (alternative to Gemini)
OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# GOOGLE SERVICES
# =============================================================================
# Google Maps API key for service area mapping (client-side safe)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# =============================================================================
# SESSION MANAGEMENT
# =============================================================================
# Secret key for signing session cookies (generate a secure random string)
# Use: openssl rand -base64 32
SESSION_SECRET=your_session_secret_key_at_least_32_characters_long

# =============================================================================
# FAQ AND CONTENT MANAGEMENT
# =============================================================================
# FAQ source: 'local' (Supabase table) or 'airtable' (external)
FAQ_SOURCE=local

# Default number of FAQ items to fetch per request
FAQ_LIMIT=10

# =============================================================================
# AIRTABLE INTEGRATION (OPTIONAL)
# =============================================================================
# Airtable API key for external content management
# Leave empty to use local Supabase data instead
AIRTABLE_API_KEY=your_airtable_api_key

# Airtable base ID containing your data
AIRTABLE_BASE_ID=your_airtable_base_id

# Table name for FAQ content
AIRTABLE_TABLE=FAQ

# Optional view name (defaults to first/grid view if omitted)
AIRTABLE_VIEW=Grid view

# Table name for contact form submissions
AIRTABLE_CONTACT_TABLE=Contact

# Field name mappings (customize based on your Airtable schema)
AIRTABLE_FIELDS_QUESTION=Question
AIRTABLE_FIELDS_ANSWER=Answer
AIRTABLE_FIELDS_UPDATED=Last Modified

# =============================================================================
# DEVELOPMENT AND DEBUGGING
# =============================================================================
# Set to 'development' for verbose logging, 'production' for minimal logs
NODE_ENV=development

# Enable Next.js analyzer for bundle size analysis
ANALYZE=false

# =============================================================================
# DEPLOYMENT ENVIRONMENT VARIABLES
# =============================================================================
# These are set automatically by deployment platforms
# VERCEL=1                    # Set by Vercel
# NETLIFY=true               # Set by Netlify
# CI=true                    # Set by CI/CD systems

